# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
# Replace with your actual MongoDB URI
# For local: mongodb://localhost:27017/languagelearningapp
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/database?options
MONGODB_URI=mongodb://localhost:27017/languagelearningapp

# JWT Configuration
# IMPORTANT: Change this to a strong random secret in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# API Configuration
API_VERSION=v1

# Security Configuration
BCRYPT_ROUNDS=10

# File Upload Configuration
MAX_FILE_SIZE=10MB

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Redis Configuration (Optional - for future caching)
# REDIS_URL=redis://localhost:6379
